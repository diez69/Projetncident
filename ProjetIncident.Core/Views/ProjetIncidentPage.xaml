<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:ProjetIncident" 
             x:Class="ProjetIncident.ProjetIncidentPage">
    <StackLayout Margin="20"> 
        <Label Text="{Binding MonTexte}" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text ="Mon bouton" Clicked="Handle_Clicked"></Button>
        <ListView ItemsSource="{Binding MaListe}" SelectedItem="{Binding MaSelection}"/>
        <Button Text ="Ajouter" Clicked="Handle_Ajout"></Button>
        <Button Text ="Supprimer" Clicked="Handle_Sup"></Button>
        
    </StackLayout>
   
</ContentPage>